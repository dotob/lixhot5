<h1>Listing gifts</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Whos bringing</th>
    <th>Guest Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= gift.id %></td>
    <td><%= gift.name %></td>
    <td><%= gift.price %></td>
    <td><%= gift.guest.name if gift.guest %></td>
    <td><%= gift.guest_count %></td>
    <td><%= link_to 'Show', gift %></td>
    <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
    <td><%= link_to 'Destroy', gift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

